# Makefile for 'school' executable
# Compiler
CC = gcc
# Source files
SRC = $(wildcard *.c)
# Object files
OBJ = $(SRC:.c=.o)
# Executable name
NAME = school
# Compiler flags
CFLAGS = -Wall -Werror -Wextra -pedantic

# All commands
.PHONY: all clean oclean fclean re

# Default rule
all: m.h $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

# Rule for cleaning Emacs and Vim temporary files along with the executable
clean:
	$(RM) *~ $(NAME)

# Rule for cleaning object files
oclean:
	$(RM) $(OBJ)

# Rule for cleaning Emacs and Vim temporary files, the executable, and object files
fclean: clean oclean

# Rule for forcing recompilation of all source files
re: fclean all
